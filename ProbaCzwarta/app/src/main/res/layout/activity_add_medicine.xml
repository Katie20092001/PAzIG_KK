<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMedicine"
    android:background="@color/blueBG">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wprowadź nazwę \n i szczegóły leku:"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:textColor="@color/darkGray"
        android:gravity="center"
        android:maxLines="2" />

    <EditText
        android:id="@+id/medicineName"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:background="@drawable/edittext_rounded"
        android:maxLines="2"
        android:text="Nazwa leku"
        android:fontFamily="cursive"
        android:textColor="@color/darkGray"
        android:textSize="20sp"
        android:gravity="center"/>

    <EditText
        android:id="@+id/description"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        android:background="@drawable/edittext_rounded"
        android:maxLines="3"
        android:textColor="@color/darkGray"
        android:text="Opis"
        android:fontFamily="cursive"
        android:textSize="20sp"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ustaw datę i godzinę \n przychodzenia powiadomień:"
        android:layout_marginTop="330dp"
        android:textSize="15sp"
        android:textColor="@color/darkGray"
        android:gravity="center"
        android:maxLines="2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <DatePicker
            android:id="@+id/date_picker"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="200dp"
            android:scaleX="0.5"
            android:scaleY="0.5" />

        <TimePicker
            android:id="@+id/time_picker"
            android:layout_width="200dp"
            android:layout_height="340dp"
            android:layout_marginTop="200dp"
            android:scaleX="0.5"
            android:scaleY="0.5" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonSaveMedicine"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="94dp"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:text="+"
        android:textColor="@color/whiteNOT"
        android:textSize="30sp"
        android:onClick="saveMedicine"/>

    <ImageButton
        android:id="@+id/image_view_return_vol4"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="650dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo"
        android:clickable="true"
        android:background="@color/blueBG"
        android:contextClickable="true"/>

</RelativeLayout>